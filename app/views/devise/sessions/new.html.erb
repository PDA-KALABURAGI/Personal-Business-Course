<div class="text-black mt-5">
  <div class="">
    <h5 class="text-center"><b>Log in to your account</b></h5>
  </div>

  <div class="d-flex justify-content-center">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field my-3">
        <%= f.label :email, class:"form-label" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control rounded-0"  %>
      </div>

      <div class="field my-3">
        <%= f.label :password, class:"form-label"  %><br />
        <%= f.password_field :password, autocomplete: "current-password", class:"form-control rounded-0"  %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field my-3">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in", class:"form-control btn btn-primary rounded-0 mt-3" %>
      </div>
    <% end %>
  </div>
  <hr / style="color: black;">

  <div class="">
    <div class="d-flex justify-content-center">
      <div>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
