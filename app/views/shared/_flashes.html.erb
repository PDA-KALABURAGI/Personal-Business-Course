<% flash.each do |type, msg| %>
  <div class="container" data-controller="flash">
    <% if notice %>
      <div class="alert alert-info alert-dismissible fade show m-1 text-center" role="alert">
        <%= notice %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close" style="background: transparent; border: none;" data-action="flash#dismiss">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    <% end %>

    <% if alert %>
      <div class="alert alert-warning alert-dismissible fade show m-1 text-center" role="alert">
        <%= alert %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close" style="background: transparent; border: none;" data-action="flash#dismiss">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    <% end %>
  </div>
<% end %>